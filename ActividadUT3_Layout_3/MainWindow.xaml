<Window x:Class="ActividadUT3_Layout_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActividadUT3_Layout_3"
        mc:Ignorable="d"
        Title="Mosaico" Height="750" Width="750" MinHeight="475" MinWidth="450" Icon="icon.ico">
    <Grid>
        <DockPanel>
            <TextBlock Height="100" Background="Red" DockPanel.Dock="Top"/>
            <TextBlock Width="100" Background="Red" DockPanel.Dock="Left"/>
            <TextBlock Width="100" Background="Blue" DockPanel.Dock="Right"/>
            <TextBlock Height="100" Background="Blue" DockPanel.Dock="Bottom"/>
            <TextBlock Width="100" Background="Green" DockPanel.Dock="Left"/>
            <TextBlock Height="100" Background="Green" DockPanel.Dock="Bottom"/>
            <TextBlock Height="100" Background="Yellow" DockPanel.Dock="Top"/>
            <TextBlock Width="100" Background="Yellow" DockPanel.Dock="Right"/>
            <TextBlock Background="Black"/>

        </DockPanel>
    </Grid>
</Window>
